@model CuaHangXe_Test2.Models.Xe
@using CuaHangXe_Test2.Controllers
@{
    ViewBag.Title = "Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Danh Sách Sản Phẩm</h2>

@if (ViewBag.AllProducts != null && ViewBag.AllProducts.Count > 0)
{
    <div class="product-list" style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center;">
        @foreach (var product in ViewBag.AllProducts)
        {
            <div class="product-item" style="flex-basis: calc(100% / 6 - 20px); border: 1px solid #ddd; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); transition: transform 0.3s;">
                <a href="@Url.Action("Details", "Home", new { id = product.MaXe })" style="text-decoration: none; color: inherit;">
                    <img src="~/Images/@product.HinhAnh" alt="@product.TenXe" style="width: 100%; height: 180px; object-fit: cover;">
                    <div style="padding: 15px;">
                        <h3 style="font-size: 1.1em; color: #333; margin: 0; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@product.TenXe</h3>
                        <p style="font-size: 1.2em; color: #666; margin: 10px 60px;">@String.Format("{0:N0}", product.GiaBanXe) $</p>
                        <button style="width: 100%; padding: 10px; background-color:#000000; color: white; border: none; border-radius: 5px; font-size: 1em; cursor: pointer; transition: background-color 0.3s;">
            Xem Chi Tiết
        </button>
                        @*<a href="@Url.Action("ChiTietSanPham", "Home", new { id = product.id })" style="display: block; width: 100%; text-align: center; padding: 10px; background-color:#000000; color: white; border: none; border-radius: 5px; font-size: 1em; cursor: pointer; transition: background-color 0.3s;">Xem chi tiết</a>*@

                    </div>
                </a>
            </div>
        }
    </div>

    <style>
        .product-item:hover {
            transform: scale(1.05);
        }

        .product-item button:hover {
            background-color: #0056b3;
        }
    </style>
}
else
{
    <p>Không có sản phẩm nào.</p>
}
